{
  "name": "yunyi-balance-simple",
  "displayName": "Yunyi Balance Simple",
  "publisher": "yunyi",
  "version": "1.1.1",
  "icon": "resources/icon.png",
  "engines": {
    "vscode": "^1.75.0"
  },
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "activationEvents": [
    "onStartupFinished",
    "onCommand:yunyi.checkBalance"
  ],
  "contributes": {
    "commands": [
      {
        "command": "yunyi.checkBalance",
        "title": "Yunyi: Check Balance"
      }
    ],
    "configuration": {
      "title": "云驿 API 查询",
      "properties": {
        "yunyi.baseUrl": {
          "type": "string",
          "default": "https://yunyi.cfd/user/api/v1/me",
          "description": "云驿 API 地址，用于获取用户信息"
        },
        "yunyi.apiToken": {
          "type": "string",
          "default": "",
          "description": "云驿 API Bearer Token（单 key / 兼容旧版）"
        },
        "yunyi.api-1": {
          "type": "string",
          "default": "",
          "description": "api-1 的 Bearer Token（可选）"
        },
        "yunyi.api-2": {
          "type": "string",
          "default": "",
          "description": "api-2 的 Bearer Token（可选）"
        },
        "yunyi.api-3": {
          "type": "string",
          "default": "",
          "description": "api-3 的 Bearer Token（可选）"
        },
        "yunyi.autoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "在状态栏自动刷新"
        },
        "yunyi.refreshIntervalMinutes": {
          "type": "number",
          "default": 10,
          "description": "自动刷新间隔（分钟）"
        },
        "yunyi.warningThresholdPercent": {
          "type": "number",
          "default": 80,
          "description": "任一 key 已用比例达到该值时显示警告"
        }
      }
    }
  },
  "dependencies": {
    "axios": "^1.13.4"
  },
  "devDependencies": {
    "@types/node": "^25.1.0",
    "@types/vscode": "^1.75.0",
    "typescript": "^5.9.3",
    "@vscode/vsce": "^2.0.0"
  }
}
